{
  "name": "nina.fm-admin",
  "version": "1.0.0",
  "description": "The official Nina.fm admin",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "supa:gen:types": "supabase gen types typescript --local > supabase/functions/_types/supabase.ts",
    "supa:reset:db": "supabase db reset",
    "supa:push:db": "supabase db push",
    "supa:deploy:functions": "supabase functions deploy mixtapes && supabase functions deploy authors && supabase functions deploy tags && supabase functions deploy metadata && supabase functions deploy profile",
    "supa:serve": "supabase functions serve localdev",
    "supa:deploy": "yarn push:db && yarn deploy:functions",
    "lint": "eslint --ext .js,.ts --ignore-path .eslintignore .",
    "db:migrate": "npx prisma migrate dev",
    "db:deploy": "npx prisma migrate deploy && npx prisma generate",
    "prisma:generate": "npx prisma generate",
    "docker:up": "docker-compose up -d",
    "docker:up:dev": "docker-compose -f docker-compose.dev.yml up -d"
  },
